{% assign content = section.settings %}
<section>
  <div
    class="relative overflow-hidden bg-no-repeat bg-cover bg-center h-[600px]"
    style="background-image: url({{ content.image | img_url }});"
  >
    {% if section.settings.image == blank %}
      {{ 'lifestyle-2' | placeholder_svg_tag: 'placeholder-svg' }}
    {% endif %}
    <div
      class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed"
      style="background-color: rgba(0, 0, 0, 0.75)"
    >
      <div class="flex justify-center items-center h-full">
        <div class="text-center text-white px-6 md:px-12">
          <div class="mb-12">
            {% if content.title != blank and content.title != blank %}
              <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold tracking-tight mb-5">{{ content.title }}</h1>
              <p class="text-white text-xl">{{ content.subtitle }}</p>
            {% else %}
              <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold tracking-tight mb-5">Lorem ipsum dolor sit amet</h1>
              <p class="text-white text-xl">Phasellus volutpat metus eget egestas</p>
            {% endif %}
          </div>
          <a
            href="{{ content.button_link }}"
            class="inline-block px-7 py-3 border-2 border-white uppercase text-white font-medium text-sm leading-snug rounded hover:bg-black hover:bg-opacity-5 focus:outline-none focus:ring-0 transition duration-150 ease-in-out"
          >
            {% if content.button_label != blank %}
              <h1 class="text-5xl md:text-6xl xl:text-7xl font-bold tracking-tight mb-5">{{ content.button_label }}</h1>
            {% else %}
              Button Text
            {% endif %}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
{
  "name": "Hero Banner",
  "settings": [
    {
      "type": "image_picker",
      "id": "image",
      "label": "Background Image"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button link"
    }
  ]
}
{% endschema %}
