{% if paginate.pages > 1 %}
  <nav class="mt-20">
    <ul class="flex justify-center items-center mx-auto">
      {% if paginate.previous %}
        <li>
          <a
            class="border border-anarvin text-anarvin text-md font-medium mr-2 px-2.5 py-0.5"
            href="{{ paginate.previous.url }}"
            class="prev">
            Prev
          </a>
        </li>
      {% else %}
        <li class="opacity-50 cursor-not-allowed">
          <span class="border border-anarvin text-anarvin text-md font-medium mr-2 px-2.5 py-0.5">
            Prev
          </span>
        </li>
      {% endif %}

      {% for page in (1..paginate.pages) %}
        {% if page == paginate.current_page %}
          <li class="border border-anarvin bg-anarvin text-white text-md font-medium mr-2 px-2.5 py-0.5">
            <span>{{ page }}</span>
          </li>
        {% else %}
          <li>
            <a class="border border-anarvin text-anarvin text-md font-medium mr-2 px-2.5 py-0.5" href="{{ paginate.url | append: '?page=' | append: page }}">{{ page }}</a>
          </li>
        {% endif %}
      {% endfor %}

      {% if paginate.next %}
        <li>
          <a
            class="border border-anarvin text-anarvin text-md font-medium mr-2 px-2.5 py-0.5"
            href="{{ paginate.next.url }}"
            class="next">Next</a>
        </li>
      {% else %}
        <li class="opacity-50 cursor-not-allowed"></li>
      {% endif %}
    </ul>
  </nav>
{% endif %}
