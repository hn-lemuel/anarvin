{% assign content = section.settings %}
{% if section.settings.image == blank %}
  {% assign bg_image = 'hero-banner-placeholder.jpg' | asset_url %}
{% else %}
  {% assign bg_image = content.image | img_url: '1000x1000' %}
{% endif %}
<section>
  <div class="relative overflow-hidden bg-no-repeat bg-cover bg-center h-[500px] md:h-[800px]" style="background-image: url({{ bg_image }});">
    <div class="absolute top-0 right-0 bottom-0 left-0 w-full h-full overflow-hidden bg-fixed" style="background-color: rgba(0, 0, 0, 0.3)">
      <div class="flex justify-center items-center h-full">
        <div class="text-center text-white px-6 md:px-12">
          <div class="mb-12">
            <h1 class="text-3xl md:text-7xl tracking-tight mb-5">{{ content.title | escape }}</h1>
            <p class="text-white text-xl">{{ content.subtitle | escape }}</p>
          </div>
          <a href="{{ content.button_link }}" class="inline-block px-7 py-3  bg-white uppercase text-black font-bold text-sm leading-snug hover:bg-anarvin hover:text-white focus:outline-none focus:ring-0 transition duration-150 ease-in-out">
            {{ content.button_label | escape }}
          </a>
        </div>
      </div>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Hero Banner",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Background Image"
      },
      {
        "type": "text",
        "id": "title",
        "label": "Title",
        "default": "Lorem ipsum dolor sit amet"
      },
      {
        "type": "text",
        "id": "subtitle",
        "label": "Subtitle",
        "default": "Phasellus volutpat metus eget egestas"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button label",
        "default": "Button text here"
      }, {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "presets": [
      {
        "name": "Hero Banner"
      }
    ]
  }
{% endschema %}
