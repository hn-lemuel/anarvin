<div class="container mx-auto p-10 lg:p-20">
  {% paginate search.results by 6 %}
    <h1 class="text-black text-4xl mb-10 text-center">Search Results</h1>

    <div class="flex justify-center items-center">
      <form
        action="{{ routes.search_url }}"
        method="get"
        class="border flex rounded">
        <input
          type="search"
          name="q"
          placeholder="Search"
          value="{{ search.terms | escape }}"
          class="px-4 py-2 w-80 border-none">

        <button type="submit" class="text-center px-7 py-3 bg-anarvin uppercase text-white font-medium text-sm leading-snug hover:bg-black focus:outline-none focus:ring-0 transition duration-150 ease-in-out">Search</button>
      </form>
    </div>
    {% if search.performed %}
      {% if search.results.size > 0 %}
        <div class="max-w-6xl mx-auto">
          <p class="text-gray-500 text-center my-10">{{ search.results.size }} results for
            <span class="font-medium text-anarvin">"{{ search.terms | escape }}"</span>
          </p>
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
            {% for item in search.results %}
              {% case item.object_type %}
                {% when 'product' %}
                {% render 'product-card', product: item %}
            {% else %}

              {% endcase %}
            {% endfor %}
          </div>
        </div>

      {% else %}
        <div class="text-center my-4">
          <p>No results found for the search term: {{ search.terms | escape }}. Try to use a different keyword</p>
        </div>
      {% endif %}
    {% endif %}


    {% render 'pagination', paginate: paginate %}
  {% endpaginate %}
</div>
